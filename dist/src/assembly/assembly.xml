<assembly>
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!--bin 脚本-->
        <fileSet>
            <lineEnding>unix</lineEnding>
            <directory>src/bin</directory>
            <outputDirectory>${dist.name}/bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

        <!--服务Jar包-->
        <fileSet>
            <directory>../datasource-service/target</directory>
            <outputDirectory>${dist.name}/services</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>../user-service/target</directory>
            <outputDirectory>${dist.name}/services</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>

    </fileSets>
